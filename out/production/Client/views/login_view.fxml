<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="354.0" prefWidth="430.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Logincontroller">
    <VBox alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label fx:id="signinLabel" alignment="CENTER" prefHeight="69.0" prefWidth="112.0" text="Sign In" textAlignment="CENTER" textFill="#232222">
                <font>
                    <Font name="Arial" size="25.0" />
                </font>
            </Label>
            <TextField fx:id="usernameField" maxHeight="30.0" maxWidth="250.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="250.0" promptText="Username" />
            <PasswordField fx:id="passwordField" maxHeight="27.0" maxWidth="250.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="250.0" promptText="Password" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="Login" />
            <Hyperlink fx:id="landingLink" onAction="#switchtoLandingpage" text="Go To LandingPage" textFill="#0f0000" underline="true" visible="false" />
            <Hyperlink fx:id="signupLink" onAction="#switchToSignup" text="Don't have an account?" textFill="#0f0000" underline="true" />
        </children>
    </VBox>
</AnchorPane>
